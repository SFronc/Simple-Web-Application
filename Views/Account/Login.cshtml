@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

@if(ViewBag.ErrorMessage != null){
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="handleForm" method="post">
    <div class="form-group">
        <label for="username">Login:</label>
        <input type="text" id="username" name="username" class="form-control" required />
    </div>
    <div class="form-group"></div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <button type="submit" name="action" value="login" class="btn btn-primary">Login in</button>
    <button type="submit" name="action" value="register" class="btn btn-primaty">Register</button>
</form>